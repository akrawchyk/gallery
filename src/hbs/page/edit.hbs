<h1>Edit page {{title}}</h1>

<ul class="page__controls">
    <li>
        <label>
            <span>Title</span>
            {{input
            type="text"
            placeholder=title
            value=newTitle}}
        </label>
    </li>
    <li>
        <label>
            <span>Slug</span>
            {{input
            type="text"
            placeholder=slug
            value=newSlug}}
        </label>
    </li>
    <li>
        <label>
            <span>Paragraph</span>
            {{input
            type="text"
            placeholder=paragraph
            value=newParagraph}}
        </label>
    </li>
    <li>
        <label>
            <span>Image</span>
            {{input
            type="text"
            placeholder=image
            value=newImage}}
        </label>
    </li>
    <li>
        <button {{action "acceptEdits"}}>Apply edits</button>
    </li>
    <li>
        {{#link-to 'page'}}Cancel{{/link-to}}
    </li>
</ul>

<div class="page__back">
    {{#link-to 'page'}}back to {{title}}{{/link-to}}
</div>
